$container
    width 100%
    max-width config('screens.md')
    margin-right auto
    margin-left auto
    padding-left config('padding.8')
    padding-right config('padding.8')
    @media lg
        padding-left 0
        padding-right 0

$break-out-of-container
    width 100vw
    position relative
    left 50%
    right 50%
    margin-left -50vw
    margin-right -50vw

$flex-container
    @extends $container
    display flex
    flex-direction column
    align-items center
    > *
        min-width 100%

$break-out-of-flex-container
    @extends $break-out-of-container
    align-self stretch

$bleeding-out-of-container
    display block
    margin config('margin.6') auto
    width 100%
    @media lg
        width config('width.bleeding-out-of-container-sm')
    @media xl
        width config('width.bleeding-out-of-container')

.container
    @extends $container

.break-out-of-container
    @extends $break-out-of-container

.bleeding-out-of-container
    @extends $bleeding-out-of-container