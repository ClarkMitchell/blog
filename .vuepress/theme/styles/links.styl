a
    text-decoration none
    color config('colors.black')
    border-bottom 1px solid config('colors.primary')
    &:hover
        color config('colors.primary')

a.header-anchor
    color config('colors.primary-light')
    float left
    font-size 0.85em
    margin-top 0.125em
    margin-left -1em
    padding-right 0.26em
    opacity 0
    text-decoration none
    border none
    &:hover
        color config('colors.primary')

h1, h2, h3, h4, h5, h6
    &:hover .header-anchor
        opacity: 1

.icon.outbound
    display none !important